{
  "name": "@arpinum/defender",
  "version": "1.0.5",
  "description": "Assertions to do some runtime type checking",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "lint": "eslint . --fix --ext .ts,.js",
    "jest": "jest --verbose",
    "testw": "jest --watch",
    "prettier": "prettier --write '**/*.{js,json,md,ts}'",
    "compile": "tsc",
    "test": "run-s -c compile jest lint",
    "prebuild": "rm -rf ./build",
    "build": "tsc -p ./tsconfig.prod.json",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "author": "Arpinum",
  "license": "MIT",
  "repository": "arpinum-oss/js-defender.git",
  "keywords": [
    "assert",
    "validate",
    "ensure",
    "contract"
  ],
  "devDependencies": {
    "@types/jest": "28.1.7",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "eslint": "8.22.0",
    "jest": "28.1.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.7.4"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
